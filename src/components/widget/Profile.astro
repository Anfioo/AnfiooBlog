---
import { Icon } from "astro-icon/components";
import { profileConfig ,umamiConfig} from "../../config";
import { url } from "../../utils/url-utils";
import ImageWrapper from "../misc/ImageWrapper.astro";

const config = profileConfig;
---
<div class="card-base p-3">
    <a aria-label="Go to About Page" href={url('/about/')}
       class="group block relative mx-auto mt-1 lg:mx-0 lg:mt-0 mb-3
       max-w-[12rem] lg:max-w-none overflow-hidden rounded-xl active:scale-95">
        <div class="absolute transition pointer-events-none group-hover:bg-black/30 group-active:bg-black/50
        w-full h-full z-50 flex items-center justify-center">
            <Icon name="fa6-regular:address-card"
                  class="transition opacity-0 scale-90 group-hover:scale-100 group-hover:opacity-100 text-white text-5xl">
            </Icon>
        </div>
        <ImageWrapper src={config.avatar || ""} alt="Profile Image of the Author" class="mx-auto lg:w-full h-full lg:mt-0 "></ImageWrapper>
    </a>
    <div class="px-2">
        <div class="font-bold text-xl text-center mb-1 dark:text-neutral-50 transition">{config.name}</div>
        <div class="h-1 w-5 bg-[var(--primary)] mx-auto rounded-full mb-2 transition"></div>
        <div class="text-center text-neutral-400 mb-2.5 transition">{config.bio}</div>
        <div class="flex flex-wrap gap-2 justify-center mb-1">
            {config.links.length > 1 && config.links.map(item =>
                    <a rel="me" aria-label={item.name} href={item.url} target="_blank" class="btn-regular rounded-lg h-10 w-10 active:scale-90">
                        <Icon name={item.icon} class="text-[1.5rem]"></Icon>
                    </a>
            )}
            {config.links.length == 1 && <a rel="me" aria-label={config.links[0].name} href={config.links[0].url} target="_blank"
                                            class="btn-regular rounded-lg h-10 gap-2 px-3 font-bold active:scale-95">
                <Icon name={config.links[0].icon} class="text-[1.5rem]"></Icon>
                {config.links[0].name}
            </a>}
        </div>

        <!-- 横向分隔符 - 增加上下间距，适配深色/浅色模式 -->
        <div class="w-full h-px bg-neutral-200 dark:bg-neutral-800 rounded-full my-2 transition"></div>

        <div class="flex flex-col gap-3">
            <!-- 今日/昨日数据行 -->
            <div class="grid grid-cols-2 gap-3">
                <!-- 今日访客 -->
                <div class="flex flex-col gap-1 p-3 bg-[var(--btn-regular-bg)] rounded-lg transition">
                    <span class="text-xs text-neutral-500 dark:text-neutral-400 transition">今日访客</span>
                    <div id="today-uv" class="font-bold text-xl text-[var(--primary)] transition">-</div>
                </div>

                <!-- 今日访问量 -->
                <div class="flex flex-col gap-1 p-3 bg-[var(--btn-regular-bg)] rounded-lg transition">
                    <span class="text-xs text-neutral-500 dark:text-neutral-400 transition">今日访问量</span>
                    <div id="today-pv" class="font-bold text-xl text-[var(--primary)] transition">-</div>
                </div>

                <!-- 昨日访客 -->
                <div class="flex flex-col gap-1 p-3  rounded-lg transition">
                    <span class="text-xs text-neutral-500 dark:text-neutral-400 transition">昨日访客</span>
                    <div id="yesterday-uv" class="font-bold text-xl text-neutral-700 dark:text-neutral-300 transition">-</div>
                </div>

                <!-- 昨日访问量 -->
                <div class="flex flex-col gap-1 p-3  rounded-lg transition">
                    <span class="text-xs text-neutral-500 dark:text-neutral-400 transition">昨日访问量</span>
                    <div id="yesterday-pv" class="font-bold text-xl text-neutral-700 dark:text-neutral-300 transition">-</div>
                </div>
            </div>

            <!-- 月度/年度数据 -->
            <div class="flex flex-col gap-2">
                <!-- 本月访问量 -->
                <div class="flex items-center justify-between p-3  rounded-lg transition">
                    <div class="flex items-center gap-2">
                        <div class="w-6 h-6 flex items-center justify-center text-[var(--primary)] dark:text-[var(--primary)]/90 transition">
                            <Icon name="material-symbols:calendar-month" class="text-lg leading-none"></Icon>
                        </div>
                        <span class="text-sm text-neutral-700 dark:text-neutral-300 transition">本月访问量</span>
                    </div>
                    <div id="last-month-pv" class="font-bold text-lg text-neutral-700 dark:text-neutral-300 transition">-</div>
                </div>

                <!-- 去年访问量 -->
                <div class="flex items-center justify-between p-3  rounded-lg transition">
                    <div class="flex items-center gap-2">
                        <div class="w-6 h-6 flex items-center justify-center text-[var(--primary)] dark:text-[var(--primary)]/90 transition">
                            <Icon name="material-symbols:calendar-today" class="text-lg leading-none"></Icon>
                        </div>
                        <span class="text-sm text-neutral-700 dark:text-neutral-300 transition">去年访问量</span>
                    </div>
                    <div id="last_year_pv" class="font-bold text-lg text-neutral-700 dark:text-neutral-300 transition">-</div>
                </div>
            </div>
        </div>
    </div>
</div>




<script>
    // 获取全站访问量统计
    async function loadSiteStats() {
        try {
            // 请求指定接口获取统计数据
            const statsResponse = await fetch('http://datapivot.dpdns.org/', {
                method: 'GET',
                headers: {
                    'Content-Type': 'application/json',
                }
            });

            if (!statsResponse.ok) {
                throw new Error(`请求失败: ${statsResponse.status}`);
            }

            const statsData = await statsResponse.json();
            console.log('统计数据:', statsData);

            // 将所有数据渲染到页面
            const elementMappings = {
                'today-uv': statsData.today_uv || 0,
                'today-pv': statsData.today_pv || 0,
                'yesterday-uv': statsData.yesterday_uv || 0,
                'yesterday-pv': statsData.yesterday_pv || 0,
                'last-month-pv': statsData.last_month_pv || 0,
                'last_year_pv': statsData.last_year_pv || 0
            };

            // 批量渲染数据
            Object.entries(elementMappings).forEach(([id, value]) => {
                const element = document.getElementById(id);
                if (element) element.textContent = value;
            });

        } catch (error) {
            console.error('获取全站统计失败:', error);
            // 加载失败时统一显示错误提示
            const allIds = ['today-uv', 'today-pv', 'yesterday-uv', 'yesterday-pv', 'last-month-pv', 'last_year_pv'];
            allIds.forEach(id => {
                const element = document.getElementById(id);
                if (element) element.textContent = '加载失败';
            });
        }
    }

    // 页面加载完成后获取统计数据
    document.addEventListener('DOMContentLoaded', loadSiteStats);
</script>